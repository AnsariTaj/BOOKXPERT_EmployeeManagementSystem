<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookXpertEmployeeManagementSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @*   <link href="~/css/MainLayout.css" rel="stylesheet" /> *@
    <link rel="stylesheet" href="~/css/site.css" />
    <style>

    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark shadow-lg mb-2" style="background-color: #ffffff;">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" href="#" style="color:black;font-size:25px">BookXpert</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link active" style="color:black" aria-current="page" href="#">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" style="color:black" href="#">Employees</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" style="color:black" href="#">Departments</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" style="color:black" href="#">Contact</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="text-white text-center py-3 fixed-bottom shadow-lg" style="background-color: #ffffff;">
        <div class="container text-center text-md-start" style="color:black">
            <div class="row">
                <!-- Company Info -->
                <div class="col-md-4 mb-3">
                    <h5 class="fw-bold">BookXpert</h5>
                    <p>Building modern web solutions with passion and precision. Thank you for visiting us!</p>
                </div>

                <!-- Quick Links -->
                <div class="col-md-4 mb-3">
                    <h5 class="fw-bold">Quick Links</h5>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-black text-decoration-none">Home</a></li>
                        <li><a href="#" class="text-black text-decoration-none">About</a></li>
                        <li><a href="#" class="text-black text-decoration-none">Services</a></li>
                        <li><a href="#" class="text-black text-decoration-none">Contact</a></li>
                    </ul>
                </div>

                <!-- Contact Info -->
                <div class="col-md-4 mb-3">
                    <h5 class="fw-bold">Contact Us</h5>
                    <p>Email: info@mycompany.com</p>
                    <p>Phone: +91 9885013416</p>
                    <p>Location: Hyderabad, India</p>
                </div>
            </div>

            <hr class="border-light" />

            <!-- Copyright -->
            <div class="text-center small">
                © 2025 MyCompany. All rights reserved by Taj Ansari.
            </div>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
